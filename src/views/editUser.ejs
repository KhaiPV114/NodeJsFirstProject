<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="topnav">
      <a href="/">Home</a>
      <a  href="/createUser">Create user</a>
      <a class="active" href="/editUser">Edit user</a>
    </div>
    <div class="form-add-new">
        <% console.log("user id: " + JSON.stringify(findedUser)); %>
      <form action="/edit-user" method="post">
        <fieldset>
          <legend>Form edit information user:</legend>
          <div class="input-group">
            <label for="">ID:</label>
            <input type="number" name="userId" value="<%= findedUser.id %>"/>
          </div>
          <div class="input-group">
            <label for="">Email:</label>
            <input type="text" name="userEmail" value="<%= findedUser.email %>"/>
          </div>
          <div class="input-group">
            <label for="">Name:</label>
            <input type="text" name="userName" value="<%= findedUser.name %>"/>
          </div>
          <div class="input-group">
            <label for="">City:</label>
            <input type="text" name="userCity" value="<%= findedUser.city %>"/>
          </div>
          <div>
            <button type="submit">Save</button>
          </div>
        </fieldset>
      </form>
    </div>
  </body>
</html>
